<h1>Timeline</h1>
    
    <div class="form-group">
    <%=form_tag '/write', method: 'post', class: "form-horizontal" do %>

    <div class="form-group">
        <textarea name="naeyong" class="form-control" row="5"></textarea>
    </div>
    
    <div class="form-group">
    <p class="text-right">
        <input type="submit" class="btn btn-success">
        </p>
    </div>
    </div>
<% end %>


<ul class="list-unstyled">
    <% @blogs.each do |b| %>
    <li>
       <blockquote>
        <p>
        <%=b.user.email%> : 
        </p>
        </blockquote>
        
    <div class="well">
        <%=b.content%>
    </div>
    
        <div class="form-group">
        <%=form_tag '/comment' do%>
        <input type="hidden" name="blog_id" value="<%=b.id%>">
       
        <div class="form-group">
        <input type="text" name="comment" class="form-control">
        </div>
        
        <div class="form-group">
            <p class="text-right">
        <input type="submit" class="btn btn-info">
        </p>
        <% end %>
        
        <ul class="list-unstyled">
            
            <p class="text-right">
             <% b.comments.each do |c| %>
            <li><%=c.user.email%> : <%=c.msg%></li>
            </p>
        <% end %>
        
        
        </ul>
        </div>
        </li>
    <% end %>
    <br>
</ul>
