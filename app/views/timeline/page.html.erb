<h1>My Page</h1>

<% @pages.each do |b| %>


<li>
       <blockquote>
        <p>
        <%=b.user.email%> : 
        </p>
        </blockquote>
        
    <div class="well">
        <%=b.content%>
        <p class="text-right">
        <a href="/edit?id=<%=b.id%>">수정</a>
        <a href="/destroy?id=<%=b.id%>">삭제</a> 
        </p>
    </div>
    
        <div class="form-group">
        <%=form_tag '/comment' do%>
        <input type="hidden" name="blog_id" value="<%=b.id%>">
        
        
       
        <div class="form-group">
        <input type="text" name="comment" class="form-control">
        </div>
        
        
        
        <div class="form-group">
            <p class="text-right">
        <input type="submit" class="btn btn-info">
        </p>
        
        
                    
        <% end %>
                </div>

        
        <ul class="list-unstyled">
            <% b.comments.each do |c| %>
            <li><%=c.user.email%> : <%=c.msg%></li>
        
                    <a href="/comment_edit?id=<%=c.id%>">수정</a>
                    <a href="/comment_destroy?id=<%=c.id%>">삭제</a> 
             </ul>
                    <% end %> 
                    <br>
    </li>
    <br>
    <br>
    <% end %>
